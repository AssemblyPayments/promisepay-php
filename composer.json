{
    "name": "promisepay/promisepay-php",
    "description": "PHP SDK for the PromisePay API",
    "keywords": [
	    "promisepay",
	    "marketplace",
	    "api",
	    "payments",
	    "escrow",
	    "marketplace payments"
  	],
    "homepage": "https://promisepay.com/",
    "require": {
        "php": ">=5.3.3",
        "ext-json": "*",
        "ext-mbstring": "*",
        "nategood/httpful": "*"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "satooshi/php-coveralls": "~0.6.1",
        "squizlabs/php_codesniffer": "~2.0"
    },
    "repositories":[
        {
            "type": "git",
            "url":"https://github.com/PromisePay/promisepay-php"

        }
    ],

    "autoload": {
        "psr-4": {
            "Promisepay\\":"lib/"
        }
    }
}